# /etc/nginx/conf.d/scalr_gate.conf
#
# Config for proxy server that redirects requests to scalr
#

server {
    <% @scalr_ports.each do |port| -%>
    listen <%= port %>;
    <% end -%>

    server_name scalr_gate;

    charset utf-8;

    access_log  /var/log/nginx/scalr_gate.log;
    error_log  /var/log/nginx/scalr_gate.error.log;
    root   /usr/share/nginx/html;
    index  index.html index.htm;

    location / {
        proxy_pass  <%= @scalr_addr %>;
        proxy_redirect off;
        proxy_buffering off;
        proxy_set_header        Host            $host;
        proxy_set_header        X-Real-IP       $remote_addr;
        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
   }
}
